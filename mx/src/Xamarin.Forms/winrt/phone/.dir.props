  ToolsVersion="12.0" 
  InitialTargets="_WindowsPhoneDirProps"
  xmlns="http://schemas.microsoft.com/developer/msbuild/2003"
>
  
  <Target Name="_WindowsPhoneDirProps">
    <ItemGroup Condition="'$(MobileSubPlatform)' != '$(WindowsPhoneMobileSubPlatformId)'">
