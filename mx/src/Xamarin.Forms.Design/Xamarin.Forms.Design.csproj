<?xml version="1.0" encoding="utf-8"?>
<Project DefaultTargets="Build" ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <PropertyGroup>
    <!--<ProjectTypeGuids>{FAE04EC0-301F-11D3-BF4B-00C04F79EFBC}</ProjectTypeGuids>-->
    <!--VS project type is a function of the first ProjectTypeGuids found in the text of the project file-->
  </PropertyGroup>
  <!--
  
    Properties
  -->
  <Import Project="$([MSBuild]::GetDirectoryNameOfFileAbove($(MSBuildProjectDirectory)\, .pre.props))\.pre.props" />
  <Import Project="$([MSBuild]::GetDirectoryNameOfFileAbove($(MSBuildThisFileDirectory), .props))\.props" />
  <!--
  
    Hierarchy
  -->
  <ItemGroup>
    <!--all E { portable }-->
    <PlatformGroup Include="$(AllPlatformId)">
      <Platforms>$(PortablePlatformId)</Platforms>
    </PlatformGroup>
    <!--portable E { netstandard }-->
    <PlatformGroup Include="$(PortablePlatformId)">
      <Platforms>$(NetStandardLibraryPlatformId)</Platforms>
    </PlatformGroup>
    <!--netstandard E { netstandard-4.5 }-->
    <PlatformGroup Include="$(NetStandardLibraryPlatformId)">
      <Platforms>$(NetStandardLibraryPlatformId-4_5)</Platforms>
    </PlatformGroup>
  </ItemGroup>
  <!--
  
    Universal
  -->
  <PropertyGroup Condition=" '$(Platform)' == '[none]' " />
  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <ProjectGuid>{80707FB3-8C08-4369-B4BB-4053559EF2EA}</ProjectGuid>
    <AssemblyName>Xamarin.Forms.Design</AssemblyName>
    <RootNamespace>Xamarin.Forms.Design</RootNamespace>
    
    <NugetIsBuildAssembly>true</NugetIsBuildAssembly>
    <NugetBuildAssemblySubDirName>design</NugetBuildAssemblySubDirName>
  </PropertyGroup>
  <ImportGroup>
    <Import Project="nuspec.props" />
  </ImportGroup>
  <ItemGroup>
    <None Include="nuspec.props" />
  </ItemGroup>
  <!--
  
    Library
  -->
  <ItemGroup Condition="'$(IsLibraryPlatform)'=='true'">
    <Compile Include="$(SrcDir)\GlobalAssemblyInfo.cs">
      <Link>Properties\GlobalAssemblyInfo.cs</Link>
      <IsMxbuildTemplate>true</IsMxbuildTemplate>
    </Compile>
    <Compile Include="$(ExtIdDir)BuildInfo.cs">
      <DependentUpon>BuildInfo.t.cs</DependentUpon>
      <Link>Properties\BuildInfo.cs</Link>
    </Compile>
    <None Include="$(ExtIdDir)BuildInfo.t.cs">
      <IsMxbuildTemplate>true</IsMxbuildTemplate>
      <Link>Properties\BuildInfo.t.cs</Link>
      <CompileOutput>BuildInfo.cs</CompileOutput>
    </None>
    <Compile Include="$(ExtPackDir)PackageInfo.cs">
      <Link>Properties\PackageInfo.cs</Link>
    </Compile>
  </ItemGroup>
  <!--
  
    Portable
  -->
  <PropertyGroup Condition=" '$(Configuration)|$(Platform)' == 'debug|netstandard' " />
  <PropertyGroup Condition=" '$(Configuration)|$(Platform)' == 'release|netstandard' " />
  <ImportGroup Condition=" '$(LibraryPlatform)' == '$(NetStandardLibraryPlatformId)' ">
    <Import Project="$(PkgDir)Mono.Cecil.$(NugetMonoCecilVersion)\lib\Net45\shim.props" />
  </ImportGroup>
  <ItemGroup Condition=" '$(LibraryPlatform)' == '$(NetStandardLibraryPlatformId)' ">
    <Reference Include="System" />
    <Reference Include="System.Core" />
    <Reference Include="Microsoft.CSharp" />
    <Compile Include="DesignGenerator.cs" />
    <Compile Include="CecilExtensions.cs" />
    <Compile Include="Program.cs" />
    <Compile Include="ExtensionMethods.cs" />
    <EmbeddedResource Include="StructOptionsConverter.cs" />
    <None Include="Xamarin.Forms.Design.targets" />
  </ItemGroup>
  <!--

    Targets
  -->
  <Import Project="$([MSBuild]::GetDirectoryNameOfFileAbove($(MSBuildThisFileDirectory), .targets))\.targets" />
</Project>